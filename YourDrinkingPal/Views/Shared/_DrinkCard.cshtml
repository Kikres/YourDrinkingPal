@using BusinessLayer.Models.DTO;
@model DrinkDto

<div class=" mx-6">
    <a class="group" asp-controller="drink" asp-action="detail" asp-route-urlSlug="@Model.UrlSlug">
        <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-8 xl:aspect-w-7">
            <img src="@(Model.UploadedImage?.ImageUrl ?? "https://source.unsplash.com/u8Jn2rzYIps/900x900")" class="h-full w-full object-cover object-center group-hover:opacity-75">
        </div>
        <div class="flex justify-between">
            <div>
                <h3 class="mt-4 text-xl text-black-700">@Model.Name</h3>
                <h3 class="mt-1 text-l text-gray-700">@Model.Tag?.Name</h3>
            </div>
            <button href="#" class="text-2xl" disabled>
                <i class="fa-regular fa-heart"></i>
            </button>
        </div>
    </a>
</div>
