@using BusinessLayer.Models.DTO;
@model DrinkViewModel

@{
    ViewData["Title"] = "Detaljer";
}

<section class="container mx-auto bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto md:max-w-6xl lg:py-16">
        
        <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Detaljer</h2>

            <div class="gap-4 sm:grid sm:grid-cols-2 xl:grid-cols-3 sm:gap-6 sm:mb-2">
                <div class="mb-4 space-y-4 xl:col-span-2 self-center">
                    <img class="w-auto rounded-lg" src="@Model.Drink.UploadedImage.ImageUrl" alt="image description">
                </div>
                <div class="mb-4 space-y-4 xl:col-span-2 self-center">
                    <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">@Model.Drink.Name</h2>
                    <p class="mb-4 text-xl tracking-tight font-extrabold text-purple-600 dark:text-white">@Model.Drink.Tag?.Name | @Model.Drink.Flavour?.Name</p>
                    <p class="my-4">@Model.Drink.Description</p>
                    <i class="fa-regular fa-heart text-2xl"></i>
                </div>
                <div class="mb-4 space-y-4 input-multi-container">
                    <label for="add-guests" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Ingridienser</label>
                    <div class="input-multi-list flex-column space-y-2">
                        @foreach (var ing in Model.Drink.Recipe.Measurements)
                        {
                            <div class="flex">
                                <div class="w-12 ">
                                    <p class="tracking-tight font-bold text-purple-600 dark:text-white">@ing.Amount</p>
                                </div>
                                <div class="w-24">
                                <p class="tracking-tight font-bold dark:text-white">@ing.Unit.Name</p>
                                </div>
                                <div class="w-60">
                                    <p class="tracking-tight dark:text-white">@ing.Ingridient.Name</p>
                                </div>
                            </div>
                        }
                    </div>           
                </div>
                <div class="mb-4 space-y-4 input-multi-container">
                    <label for="add-guests" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Instruktioner</label>
                    <div class="input-multi-list flex-column space-y-2">
                        @for (int i = 0; i < Model.Drink.Recipe.Instructions.Count; i++)
                        {
                            var ins = Model.Drink.Recipe.Instructions[i];
                            <div class="flex">
                                <div class="w-12 ">
                                    <p class="tracking-tight font-bold text-purple-600 dark:text-white">@(i+1)</p>
                                </div>
                                <div class="w-auto">
                                    <p class="tracking-tight dark:text-white">@ins.Description</p>
                                </div>
                            
                            </div>
                        }
                    </div>
                </div>

                <div class="mb-4 space-y-4 input-multi-container">
                    <label for="add-guests" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Utrustning</label>
                    <div class="input-multi-list flex-column space-y-2">
                        <div class="flex">
                            @foreach (var tool in Model.Drink.Recipe.Equipment)
                            {
                                <p class="tracking-tight dark:text-white">@tool.Name &nbsp;</p>
                            }

                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
                    Publicera
                <button>
            </div>
    </div>
</section>
