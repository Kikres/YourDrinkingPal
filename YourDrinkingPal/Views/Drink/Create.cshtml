@using BusinessLayer.Models.DTO; 
@model DrinkCreateViewModel 
@{ ViewData["Title"] = "Home Page"; }


<section class="container mx-auto bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto md:max-w-6xl lg:py-16">
        <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Skapa en ny drink</h2>
        <form asp-controller="drink" asp-action="create" method="post">
            <div class="gap-4 sm:grid sm:grid-cols-2 xl:grid-cols-3 sm:gap-6 sm:mb-2">
                <div class="mb-4 space-y-4 xl:col-span-2 self-center">
                    <img class="w-auto rounded-lg" src="https://source.unsplash.com/u8Jn2rzYIps/900x900" alt="image description">
                </div>
                <div class="mb-4 space-y-4 xl:col-span-2">
                    <div>
                        <label asp-for="DrinkCreateDto.Name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Namn</label>
                        <input asp-for="DrinkCreateDto.Name" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" required="true">
                    </div>
                    <div class="grid gap-6 mb-6 md:grid-cols-2">
                        <div>

                            <label asp-for="DrinkCreateDto.TagId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Vilken slogan passar?</label>
                            <select asp-for="DrinkCreateDto.TagId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                @for (int i = 0; i < Model.Tags.Count; i++)
                                {
                                    var tag = Model.Tags[i];
                                    <option value="@tag.Id">@tag.Name</option>
                                }
                            </select>
                        </div>
                        <div>

                            <label asp-for="DrinkCreateDto.FlavourId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Vilken smakprofil passar?</label>
                            <select asp-for="DrinkCreateDto.FlavourId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                @for (int i = 0; i < Model.Flavours.Count; i++)
                                {
                                    var flavour = Model.Flavours[i];
                                    <option value="@flavour.Id">@flavour.Name</option>
                                }
                            </select>

                        </div>
                        <div>

                            <label asp-for="DrinkCreateDto.Style.GarnishId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Vilken topping passar?</label>
                            <select asp-for="DrinkCreateDto.Style.GarnishId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                @for (int i = 0; i < Model.Garnishes.Count; i++)
                                {
                                    var garnish = Model.Garnishes[i];
                                    <option value="@garnish.Id">@garnish.Name</option>
                                }
                            </select>
                        </div>
                        <div>

                            <label asp-for="DrinkCreateDto.Style.GlassId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Vilket glas passar?</label>
                            <select asp-for="DrinkCreateDto.Style.GlassId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                @for (int i = 0; i < Model.Glasses.Count; i++)
                                {
                                    var glass = Model.Glasses[i];
                                    <option value="@glass.Id">@glass.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div>
                        <label asp-for="DrinkCreateDto.Description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Beskrivning</label>
                        <div class="mb-4 w-full bg-gray-100 rounded-lg border border-gray-200 dark:bg-gray-600 dark:border-gray-600">
                            <div class="py-2 px-4 bg-gray-50 rounded-b-lg dark:bg-gray-700">
                                <textarea asp-for="DrinkCreateDto.Description" rows="8" class="block px-0 w-full text-sm text-gray-800 bg-gray-50 border-0 dark:bg-gray-700 focus:ring-0 dark:text-white dark:placeholder-gray-400" required="true"></textarea>
                            </div>
                        </div>
                    </div>
                    <div>
                        <label asp-for="DrinkCreateDto.Style.ColorId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Färgen på drinken</label>
                        <div class="flex items-center space-x-2">
                            @for (int i = 0; i < Model.Colors.Count ; i++)
                            {
                                var color = Model.Colors[i];
                                <input asp-for="DrinkCreateDto.Style.ColorId" type="radio" value="@color.Id" class="w-7 h-7 bg-gray-100 border-gray-300 focus:ring-black-500 rounded-sm" style="background-color: @color.HEX;">
                            }
                        </div>
                        
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Transparens på vätskan</label>
                        <ul class="items-center w-full text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg sm:flex dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                            @for (int i = 0; i < Model.Transparencies.Count; i++)
                            {
                                var trans = Model.Transparencies[i];
                                <li class="w-full border-b border-gray-200 sm:border-b-0 sm:border-r dark:border-gray-600">
                                    <div class="flex items-center pl-3">
                                        <input asp-for="DrinkCreateDto.Style.TransparencyId" type="radio" value="@trans.Id" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                                        <label asp-for="DrinkCreateDto.Style.TransparencyId" class="w-full py-3 ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">@trans.Name</label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                    
                </div>
                <div class="mb-4 space-y-4 input-multi-container">
                    <label for="add-guests" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Ingridienser</label>
                    <div class="input-multi-list flex-column space-y-2">
                        <div class="flex">
                            <div class="w-full">
                                <input asp-for="DrinkCreateDto.Recipe.Measurements[0].Amount" type="number" placeholder="volym" class="input-multi-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" required="true" />
                            </div>
                            <div class="w-full">

                                <select asp-for="DrinkCreateDto.Recipe.Measurements[0].UnitId" class="input-multi-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                    <option selected disabled>enhet</option>
                                    @for (int i = 0; i < Model.Units.Count; i++)
                                    {
                                        var unit = Model.Units[i];
                                        <option value="@unit.Id">@unit.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="w-full">
                                <input asp-for="DrinkCreateDto.Recipe.Measurements[0].Ingridient.Name" type="text" placeholder="ingrediens" class="input-multi-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" required="true" />
                            </div>
                        </div>
                    </div>
                    <div class="flex justify-center ">
                        <button type="button" class="hidden input-multi-minus text-xl text-dark bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg px-3 py-1.5 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                            <i class="fa-solid fa-circle-minus "></i>
                        </button>
                        <button type="button" class="input-multi-plus text-xl text-dark bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg px-3 py-1.5 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                            <i class="fa-solid fa-circle-plus "></i>
                        </button>
                    </div>
                    <template>
                        <div class="flex">
                            <div class="w-full">
                                <input asp-for="DrinkCreateDto.Recipe.Measurements[0].Amount" type="number" placeholder="volym" class="input-multi-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" required="true" />
                            </div>
                            <div class="w-full">
                                 
                                <select asp-for="DrinkCreateDto.Recipe.Measurements[0].UnitId" class="input-multi-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                    <option selected disabled>enhet</option>
                                    @for (int i = 0; i < Model.Units.Count; i++)
                                    {
                                        var unit = Model.Units[i];
                                        <option value="@unit.Id">@unit.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="w-full">
                                <input asp-for="DrinkCreateDto.Recipe.Measurements[0].Ingridient.Name" type="text" placeholder="ingrediens" class="input-multi-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" required="true" />
                            </div>
                            
                        </div>
                        
                    </template>
                </div>
                <div class="mb-4 space-y-4 input-multi-container">
                    <label for="add-guests" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Instruktioner</label>
                    <div class="input-multi-list flex-column space-y-2">
                        <div class="flex">
                            <div class="w-full">
                                <input asp-for="DrinkCreateDto.Recipe.Instructions[0].Description" type="text" placeholder="beskriv stegvis" class="input-multi-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" required="true" />
                            </div>
                        </div>
                    </div>
                    <div class="flex justify-center ">
                        <button type="button" class="hidden input-multi-minus text-xl text-dark bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg px-3 py-1.5 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                            <i class="fa-solid fa-circle-minus "></i>
                        </button>
                        <button type="button" class="input-multi-plus text-xl text-dark bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg px-3 py-1.5 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                            <i class="fa-solid fa-circle-plus "></i>
                        </button>
                    </div>
                    <template>
                        <div class="flex">
                            <div class="w-full"> 
                                <input asp-for="DrinkCreateDto.Recipe.Instructions[0].Description" type="text" placeholder="beskriv stegvis" class="input-multi-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" required="true" />
                            </div>
                        </div>
                    </template>
                </div>

                <div class="mb-4 space-y-4 input-multi-container">
                    <label for="add-guests" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Utrustning</label>
                    <div class="input-multi-list flex-column space-y-2">
                        <div class="flex">
                            <select asp-for="DrinkCreateDto.Recipe.Equipment[0].Id" class="input-multi-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                @for (int i = 0; i < Model.Equipment.Count; i++)
                                {
                                    var tool = Model.Equipment[i];
                                    <option value="@tool.Id">@tool.Name</option>
                                }
                            </select>
                        
                        </div>
                    </div>
                    <div class="flex justify-center ">
                        <button type="button" class="hidden input-multi-minus text-xl text-dark bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg px-3 py-1.5 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                            <i class="fa-solid fa-circle-minus "></i>
                        </button>
                        <button type="button" class="input-multi-plus text-xl text-dark bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg px-3 py-1.5 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                            <i class="fa-solid fa-circle-plus "></i>
                        </button>
                    </div>
                    <template>
                        <div class="flex">
                            <select asp-for="DrinkCreateDto.Recipe.Equipment[0].Id" class="input-multi-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                                @for (int i = 0; i < Model.Equipment.Count; i++)
                                {
                                    var tool = Model.Equipment[i];
                                    <option value="@tool.Id">@tool.Name</option>
                                }
                            </select>

                        </div>
                    </template>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
                nästa    
                <button>
            </div>

        </form>
    </div>
</section>

<script src="~/js/DrinkCreate.js"></script>